    <div class="container">
    <h1>Edit Page</h1>
    <form action="/blk/<%= selectBusiness.id %>?_method=PUT " method="POST">
        <div class="input-group input-group-lg">
            <span class="input-group-addon">Name:</span>
            <input type="text" name="name" class="form-control" value="<%= selectBusiness.name %>">
        </div><br>

        <div class="input-group input-group-lg">
            <span class="input-group-addon">Location:</span>
            <input type="text" name="location" class="form-control" value="<%= selectBusiness.location %>">
        </div><br>

        <div class="input-group input-group-lg">
            <span class="input-group-addon">Owners:</span>
            <input type="text" name="owners" class="form-control" value="<%= selectBusiness.owners %>">
        </div><br>

        <div class="input-group input-group-lg">
            <span class="input-group-addon">Type:</span>
            <input type="text" name="type" class="form-control" value="<%= selectBusiness.type %>">
        </div><br>

        <div class="input-group input-group-lg">
            <span class="input-group-addon">Email:</span>
            <input type="text" name="email" class="form-control" value="<%= selectBusiness.email %>">
        </div><br>

        <div class="input-group input-group-lg">
            <span class="input-group-addon">Phone:</span>
            <input type="text" name="phone" class="form-control" value="<%= selectBusiness.phone %>">
        </div><br>

        <div class="input-group input-group-lg">
            <span class="input-group-addon">Website:</span>
            <input type="text" name="website" class="form-control" value="<%= selectBusiness.website %>">
        </div><br>
        <div class="input-group input-group-lg">
            <span class="input-group-addon">Image:</span>
            <input type="text" name="image" class="form-control" value="<%= selectBusiness.image %>">
        </div><br>
        <div class="input-group input-group-lg">
            <span class="input-group-addon">Tags:</span>
            <input type="text" name="tags" class="form-control" value="<%= selectBusiness.tags %>">
        </div><br>
        
        <input type="submit" name="PUT" value="Edit Your Business">
    </form>
</div>
    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
